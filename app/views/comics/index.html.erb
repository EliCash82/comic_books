<h1>Listing comics</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Issue</th>
    <th>Publisher</th>
    <th>Year</th>
    <th>Synopsis</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @comics.each do |comic| %>
  <tr>
    <td><%= comic.title %></td>
    <td><%= comic.issue %></td>
    <td><%= comic.publisher %></td>
    <td><%= comic.year %></td>
    <td><%= comic.synopsis %></td>
    <td><%= link_to 'Show', comic %></td>
    <td><%= link_to 'Edit', edit_comic_path(comic) %></td>
    <td><%= link_to 'Destroy', comic, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

